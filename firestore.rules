
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------------- Helpers ---------------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /* ---------------- USERS ---------------- */

    match /users/{userId} {

      // Admin: full control
      allow get, list, create, update, delete: if isAdmin();

      // Normal user: manage own profile (no delete)
      allow get, create, update: if isOwner(userId);
    }
    
    match /roles/{userId} {
      // Only admins can interact with role documents.
      allow get, create, update, delete: if isAdmin();
      // Listing roles is denied for security.
      allow list: if false; 
    }

    /* ---------------- ADMIN ROLES ---------------- */
    
    match /roles_admin/{uid} {
        // Only admins should be able to check for this document's existence.
        // Nobody can write to it from the client.
        allow get, list, create, update, delete: if false;
    }

    /* ---------------- AUTHORS ---------------- */

    match /authors/{authorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- ARTICLES ---------------- */

    match /articles/{articleId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- DONATIONS ---------------- */

    match /donations/{donationId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
