
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------------- Helpers ---------------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // An admin is ONLY the user with this specific email.
    function isAdmin() {
      return isSignedIn() && request.auth.token.email == 'jdnewsgujarati@gmail.com';
    }
    
    // Checks if the user is only trying to update allowed fields.
    function isUpdatingAllowedFields() {
        let allowedFields = ['firstName', 'lastName', 'phoneNumber', 'address'];
        let incomingKeys = request.resource.data.keys();
        // This ensures the update request ONLY contains keys from the allowedFields list.
        return incomingKeys.size() <= allowedFields.size() && incomingKeys.hasAll(allowedFields);
    }

    /* ---------------- USERS ---------------- */

    match /users/{userId} {
      // Admins have full control over all user documents.
      allow get, list, create, update, delete: if isAdmin();
      
      // A user can read their own document.
      allow get: if isOwner(userId);
      
      // A user can update their own document, but ONLY specific fields.
      // They can NEVER change their own role.
      allow update: if isOwner(userId) && isUpdatingAllowedFields();
      
      // A user can create their own document upon signup.
      allow create: if isOwner(userId);
    }

    /* ---------------- ROLES ---------------- */

    match /roles/{uid} {
      // A user can read THEIR OWN role document.
      allow get: if isOwner(uid);
      
      // Only admins can create, update, or delete roles. This is critical for security.
      allow create, update, delete: if isAdmin();
      
      // Disallow listing all roles from the client for security.
      allow list: if false;
    }

    /* ---------------- AUTHORS ---------------- */

    match /authors/{authorId} {
      // Anyone can view author profiles.
      allow get, list: if true;
      // Only admins can create, update, or delete authors.
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- ARTICLES ---------------- */

    match /articles/{articleId} {
      // Anyone can read articles.
      allow get, list: if true;
      // Only admins can create, update, or delete articles.
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- DONATIONS ---------------- */

    match /donations/{donationId} {
      // An admin or the user who made the donation can view it.
      allow get: if isAdmin() || isOwner(resource.data.userId);
      // Only admins can list all donations.
      allow list: if isAdmin();
      // Any signed-in user can create a donation for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // A donation record should be immutable by the user.
      allow update, delete: if false;
    }

    /* ---------------- ADVERTISEMENTS ---------------- */
    match /advertisements/{adId} {
        // Ads are public content.
        allow get, list: if true;
        // Only admins can manage ads.
        allow create, update, delete: if isAdmin();
    }
  }
}
