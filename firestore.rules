
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(uid) {
      return get(/databases/$(database)/documents/roles/$(uid)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'director';
    }

    // Rules for collections
    match /users/{userId} {
      // Admins have full control over user documents.
      allow get, list, create, update, delete: if isAdmin();
      
      // Regular users can get, create, and update their own document,
      // but they cannot change their role.
      allow get, create: if isOwner(userId);
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }
    
    match /roles/{userId} {
      // Only admins can interact with role documents.
      allow get, create, update, delete: if isAdmin();
      // Listing roles is denied for security.
      allow list: if false; 
    }

    match /authors/{authorId} {
      // Anyone can read author profiles.
      allow get, list: if true;
      // Only admins can create, update, or delete authors.
      allow create, update, delete: if isAdmin();
    }

    match /articles/{articleId} {
      // Anyone can read articles.
      allow get, list: if true;
      // Only admins can create, update, or delete articles.
      allow create, update, delete: if isAdmin();
    }
    
    match /donations/{donationId} {
      // Admins can get any donation, users can only get their own.
      allow get: if isAdmin() || isOwner(resource.data.userId);
      // Only admins can list all donations.
      allow list: if isAdmin();
      // An authenticated user can create a donation for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Users can update or delete their own donations.
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
