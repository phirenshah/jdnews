
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------------- Helpers ---------------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /* ---------------- USERS ---------------- */

    match /users/{userId} {
      // Admin: full control
      allow read, write: if isAdmin();
      
      // Normal user: manage own profile (no delete)
      allow get, create, update: if isOwner(userId);
    }

    /* ---------------- AUTHORS ---------------- */

    match /authors/{authorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- ARTICLES ---------------- */

    match /articles/{articleId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- DONATIONS ---------------- */

    match /donations/{donationId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }

    /* ---------------- ADMIN ROLES ---------------- */
    
    match /roles_admin/{uid} {
        // Admins need to be able to check if this document exists for themselves.
        // Nobody else can read it, and nobody can write to it from the client.
        allow get: if request.auth.uid == uid;
        allow list, create, update, delete: if false;
    }
  }
}
