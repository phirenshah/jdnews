
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------------- Helpers ---------------- */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(uid) {
      return get(/databases/$(database)/documents/roles/$(uid)).data.role;
    }

    function isAdmin() {
      // Hardcode one user as admin for bootstrapping, or rely on roles.
      return isSignedIn() && (getUserRole(request.auth.uid) == 'director' || request.auth.token.email == 'jdnewsgujarati@gmail.com');
    }

    /* ---------------- USERS ---------------- */

    match /users/{userId} {
      // Admin has full control over all user documents.
      allow read, write: if isAdmin();
      
      // A user can read and update their own document, but not change their role.
      allow get, create: if isOwner(userId);
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }

    /* ---------------- ROLES ---------------- */

    match /roles/{uid} {
      // Only admins can read or write roles.
      allow read, write: if isAdmin();
    }

    /* ---------------- AUTHORS ---------------- */

    match /authors/{authorId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- ARTICLES ---------------- */

    match /articles/{articleId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    /* ---------------- DONATIONS ---------------- */

    match /donations/{donationId} {
      allow get: if isAdmin() || isOwner(resource.data.userId);
      allow list: if isAdmin();
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}

    